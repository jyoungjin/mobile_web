<section id="bookmark">
    <div class="container">
        <div class="row justify-content-center">
            <div class="bs-example">
                <h2 class="text-white mt-0">등록된 정보</h2>
                <hr class="divider light my-4">
            </div>
        </div>
        <div class="bs-example">
            <table class="table table-dark">
                <thead class="thead-light">
                    <tr>
                        <th>Row</th>
                        <th>정류장 이름</th>
                        <th>정류장 ID</th>
                        <th>제거</th>
                    </tr>
                </thead>
                <tbody id="list">
                    <% stations.forEach(function(item, index) { %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= item.tName %></td>
                        <td><a href="" stationId = "<%=item.tId%>"><%= item.tId %></a></td>
                        <td><button id="delbtn" type="button" class="btn btn-outline-danger btn-sm" onclick="location.href='/delone?tId=<%=item.tId%>'">삭제</button></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</section>
