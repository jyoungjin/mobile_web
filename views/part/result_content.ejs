<section class="page-section" id="busPath_content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 text-center">
                <h2 class="text-white mt-0">정류장 정보</h2>
                <hr class="divider light my-4">

                <div id="map"></div>
                <div>
                    <p id="startLat" value="" hidden></p>
                    <p id="startLon" value="" hidden></p>
                </div>
                <a class="btn btn-primary mt-3" id="result_btn" href='/result'>주변 정류소 조회</a>
                <a class="btn btn-primary ml-3 mt-3" id="move_btn" href="/result">좌표 이동</a>
                   <p id="latlng" class="text-white mt-0">
                      <br>
                       <!--클릭 시 좌표값 출력-->
                   </p>
                   
                   <div class="mt-5">
                    <table class="table table-dark">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>정류소 ID</th>
                                <th>정류소 이름</th>
                                <th>등록</th>
                            </tr>
                        </thead>
                        <tbody id="list">
                          <% var idx = 0 %>
                           <% station.stationId.forEach(function(item, index, test){ %>
                                
                            <tr>
                                <td><%= ++index %></td>
                                <td><a href="" stationId = "<%= item %>"><%= item %></a></td>
                                <td><%= station.stationName[idx] %></td>
                                <td><button type="button" class="btn btn-sm btn-outline-info" onclick="location.href='/insert?tId=<%=item%>&tName=<%=station.stationName[idx++]%>'">등록</button></td>
                            </tr>
                            <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
